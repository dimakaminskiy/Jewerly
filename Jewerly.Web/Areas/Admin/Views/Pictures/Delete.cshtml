@using Jewerly.Web.Utils
@model Jewerly.Domain.Picture

@{
    ViewBag.Title = "Изображения товаров";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>Удаление</h2>

<h3>Подтвердите удаление</h3>
<div>
    <h4>Изображение товара</h4>
    <hr/>
    <div style="color: red">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.Path)
            </div>
            <div class="col-md-10">
                <img class="img-responsive shadow" src="@Model.Preview()" alt="@Model.Path" title="@Model.Path"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                @Html.DisplayNameFor(model => model.Caption)
            </div>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Caption)
            </div>
        </div>

    </div>

    <div style="color: red">
        Вы можете удалить изображение, которое не используется с товаром
    </div>
    @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Удалить" class="btn btn-primary" />
                <a href="@Url.Action("Index", "Pictures")" class="btn btn-default">Назад</a>
            </div>
        }
    </div>
